<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".PlayersListFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPlayerslist"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        android:orientation="vertical"
        tools:listitem="@layout/item_players_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/edtPlayer"
        app:layout_constraintTop_toTopOf="parent"/>

    <EditText
        android:id="@+id/edtPlayer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Jogador"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnAdicionarPlayer"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/btnAdicionarPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADICIONAR"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/edtPlayer"
        />

</androidx.constraintlayout.widget.ConstraintLayout>